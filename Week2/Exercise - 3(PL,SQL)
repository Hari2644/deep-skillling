Scenario 1 :

CREATE OR REPLACE PROCEDURE ProcessMonthlyInterest IS
BEGIN
    UPDATE Account
    SET Balance = Balance * 1.01,
        LastModified = SYSDATE
    WHERE AccountType = 'Savings';
END;
/
SELECT AccountID, AccountType, Balance, LastModified
FROM Account
WHERE AccountType = 'Savings';
